@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    @using (Html.BeginForm("LoginAction", "Home", FormMethod.Post))
    {
        <div class="container">
            <label for="userEmail"><b>Email</b></label>
            <input class="styled_input" type="email" placeholder="Enter Email" name="userEmail" required>

            <br><br>
            
            <label for="userPassword"><b>Password</b></label>
            <input class="styled_input" type="password" placeholder="Enter Password" name="userPassword" required>

            <button class="styled_button" type="submit" value="Login">Login</button>

        </div>
    }
</div>
</body>
</html>